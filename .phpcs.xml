<?xml version="1.0"?>
<ruleset name="CsBase">
	<description>A custom set of rules to check for a (mostly) WordPress coding standards</description>

	<!-- Exclude node and composer folders -->
	<exclude-pattern>vendor/*</exclude-pattern>
	<exclude-pattern>node_modules/*</exclude-pattern>
	<exclude-pattern>*/data/*</exclude-pattern>
	<exclude-pattern>.cache-loader/*</exclude-pattern>

	<!-- Only check php code, linters are checking js and css -->
	<arg name="extensions" value="php"/>

	<!-- Define default report type -->
	<arg name="report" value="summary"/>

	<!-- Enable colors in report -->
	<arg name="colors"/>

	<!-- Include the WordPress-VIP. -->
	<rule ref="WordPress">
		<exclude name="WordPress.PHP.YodaConditions" />
	</rule>

	<!-- Let's also check that everything is properly documented. -->
	<!-- <rule ref="WordPress-Docs"/> -->

	<!-- Add in some extra rules from other standards. -->
	<!-- <rule ref="Generic.CodeAnalysis.UnusedFunctionParameter"/> -->
	<!-->
	For information on additional custom properties available, check out
	the wiki:
	https://github.com/WordPress-Coding-Standards/WordPress-Coding-Standards/wiki/Customizable-sniff-properties
	-->

	<!-- Disable check for translators comments -->
	<rule ref="WordPress">
		<exclude name="WordPress.WP.I18n.TranslatorsCommentWrongStyle" />
		<exclude name="WordPress.WP.I18n.MissingTranslatorsComment" />

		<!-- Extra spacing allowed for readability -->
		<exclude name="Generic.Functions.FunctionCallArgumentSpacing.TooMuchSpaceAfterComma" />

		<!-- Ignore file comments (for now) -->
		<exclude name="Squiz.Commenting.FileComment" />
	</rule>

	<rule ref="Generic.Commenting.Todo"/>
	<config name="minimum_supported_wp_version" value="4.9"/>

	<rule ref="WordPress.WP.I18n">
		<properties>
			<property name="text_domain" type="array" value="cs-base"/>
		</properties>
	</rule>

	<rule ref="WordPress.NamingConventions.PrefixAllGlobals">
		<properties>
			<property name="prefixes" type="array" value="cs_base,cs"/>
		</properties>
	</rule>

	<!-- Ref: https://github.com/WordPress-Coding-Standards/WordPress-Coding-Standards/wiki/Customizable-sniff-properties#xss-custom-output-escaping-functions -->
	<rule ref="WordPress.XSS.EscapeOutput">
		<properties>
			<property name="customEscapingFunctions" type="array" value="get_the_tag_list" />
		</properties>
	</rule>

</ruleset>
